<% include partials/header  %>

<div class="container">

	<h1> Edit <%=blog.title%> </h1>
	<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
	  <div class="form-group">
	    <label for="title">Title</label>
	    <input type="text" class="form-control" id="title" value="<%=blog.title%>" name="blog[title]">
	  </div>
	  <div class="form-group">
	    <label for="image">Image</label>
	    <input type="text" class="form-control" id="image" value="<%=blog.image%>" name="blog[image]">
	  </div>
	   <div class="form-group">
	    <label for="text">Text</label>
	    <textarea class="form-control" id="text"  name="blog[textArea]"> <%=blog.textArea%> </textarea>
	   
	  </div>
	   
	  <button type="submit" class="btn btn-primary">Submit</button>

	</form>

<a href="/blogs"><button type="button" class="btn btn-success"> See all posts</button></a>

</div>



<% include partials/footer  %>